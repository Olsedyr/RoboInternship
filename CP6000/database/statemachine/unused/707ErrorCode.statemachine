STATEMACHINEVERSION 3
Name=ErrorCode
Link=parent Parent
linkValue=error1 errorCode CamGenLift
linkValue=error2 errorCode Emergency
linkValue=error3 errorCode KasseInLiner
linkValue=error4 errorCode PIDBuffer
linkValue=error5 errorCode PIDLift
linkValue=error6 errorCode PIDSkub
linkValue=error7 errorCode ProductState
;linkValue=error8 errorCode RemoteWatch
linkValue=error9 errorCode TripWatch
linkValue=error12 errorCode WorkCell
linkValue=error13 errorCode KasseLift
linkValue=error14 errorCode ProductCount
linkValue=ioerror errorCode IOError

State=ST_HALT
END

State=ST_TIMER
END

State=ST_IDLE
	TEST parent = ST_RESET
		SETSTATE ST_RESET
	ENDTEST
END

State=ST_RESET
	SETSTATE ST_WATCH
END

State=ST_WATCH
	TEST error1 != 0
	OR error2 != 0
	OR error3 != 0
	OR error4 != 0
	OR error5 != 0
	OR error6 != 0
	OR error7 != 0
;	OR error8 != 0
	OR error9 != 0
	OR error12 != 0
	OR error13 != 0
	OR error14 != 0
  OR ioerror != 0
		SETSTATE ST_ERROR
	ENDTEST
	TEST parent = ST_IDLE
		SETSTATE ST_IDLE
	ENDTEST
END

State=ST_ERROR
	TEST parent = ST_IDLE
		SETSTATE ST_IDLE
	ENDTEST
END
