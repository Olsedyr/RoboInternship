STATEMACHINEVERSION 3
Name=ErrorCode
Link=parent Parent
;linkValue=workcell errorCode WorkCell
linkValue=emergency errorCode Emergency
linkValue=tripwatch errorCode TripWatch
linkValue=ioerror errorCode IOError
linkValue=pm errorCode PalletMagazine
linkValue=servoshuttle errorCode ServoShuttle
linkValue=shuttle errorCode Shuttle

State=ST_HALT
END

State=ST_TIMER
END

State=ST_IDLE
	TEST parent = ST_RESET
		SETSTATE ST_RESET
	ENDTEST
END

State=ST_RESET
	SETSTATE ST_WATCH
END

State=ST_WATCH
  TEST emergency != 0
	OR tripwatch != 0
  OR ioerror != 0
  OR pm != 0
  OR servoshuttle != 0
  OR shuttle != 0
		SETSTATE ST_ERROR
	ENDTEST
	TEST parent = ST_IDLE
		SETSTATE ST_IDLE
	ENDTEST
END

State=ST_ERROR
	TEST parent = ST_RESET
		SETSTATE ST_RESET
	ENDTEST
END
