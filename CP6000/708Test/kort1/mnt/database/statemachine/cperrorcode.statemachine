STATEMACHINEVERSION 3
Name=ErrorCode
Link=parent Parent
linkValue=workcell errorCode WorkCell
linkValue=emergency errorCode Emergency
linkValue=tripwatch errorCode TripWatch
linkValue=pidbuffer errorCode PIDBuffer
linkValue=pidlift errorCode PIDLift
linkValue=pidskub errorCode PIDSkub
linkValue=langbufferskub errorCode LangBufferSkub
linkValue=remotewatch errorCode RemoteWatch
linkValue=kasseinliner errorCode KasseInLiner
linkValue=kasselift errorCode KasseLift
linkValue=productcount errorCode ProductCount
linkValue=ioerror errorCode IOError

State=ST_HALT
END

State=ST_TIMER
END

State=ST_IDLE
	TEST parent = ST_RESET
		SETSTATE ST_RESET
	ENDTEST
END

State=ST_RESET
	SETSTATE ST_WATCH
END

State=ST_WATCH
  TEST workcell != 0
  OR emergency != 0
  OR tripwatch != 0
  OR pidbuffer != 0
  OR pidlift != 0
  OR pidskub != 0
  OR langbufferskub != 0
  OR remotewatch != 0
  OR kasseinliner != 0
  OR kasselift != 0
  OR productcount != 0
  OR ioerror != 0
		SETSTATE ST_ERROR
	ENDTEST
	TEST parent = ST_IDLE
		SETSTATE ST_IDLE
	ENDTEST
END

State=ST_ERROR
	TEST parent = ST_IDLE
		SETSTATE ST_IDLE
	ENDTEST
END
