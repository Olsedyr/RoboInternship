STATEMACHINEVERSION 3
Name=Program
Link=workcell WorkCell
Value=usersection 0
Const=programidx 0
;Value=loadfromleft 0
;Value=loadfromright 0
;Value=productsfromleft 0
;Value=productsfromright 0
Value=newprogram 1
Value=timeMotorInGoDown 0
;Value=timeKlapDown 0
;Value=noShakeOnLast 0
;Value=waitInR3 0
;Value=vibrateTime 8000000
Value=manuelt 0
;Value=kasseStopType 1
;Value=secondProdConvOn 1
;programmer
Value=program 0


State=PROGRAM_HARNDRUP
	SET usersection 0
	SET newprogram 1
	SET program 0
	SET usersection 1 ; user editable below
	SETSTATE ST_RUNNING_HARNDRUP
END


State=ST_RUNNING_HARNDRUP
	SET newprogram 0
  TEST workcell = ST_IDLE
  OR workcell = ST_PAUSED
    TEST programidx != program
      SETSTATE ST_RESET
    ENDTEST
  ENDTEST
END


State=ST_TIMER
END

State=ST_HALT
END

State=ST_IDLE
	SETSTATE ST_RESET
END

State=ST_RESET
	TEST programidx = 0
    SETSTATE PROGRAM_HARNDRUP
  ENDTEST
END


