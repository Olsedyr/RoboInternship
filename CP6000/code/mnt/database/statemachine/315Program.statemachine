STATEMACHINEVERSION 3
Include=casekind.statemachine
Name=Program315
;signal to WorkCell that a new program has been selected
Value=usersection 0
Value=newprogram 1
Value=programidx 1
Value=casekind 0
Link=workcell WorkCell
Value=usersection 0
Value=casekind 0
Value=wALayer 0
Value=wBLayer 0
Value=wAItemsPerLayer 0
Value=wBItemsPerLayer 0
Value=timeInPalletB 0

; Put programstates in top

; also edit 'subPrograms' for example VendePattern and PushPattern for particular program

State=PROGRAM_IFCO18_5_LAYERS
	SET usersection 0
	SET newprogram 1
	SET casekind casekind_IFCO18
	SET wBItemsPerLayer 2
	SET usersection 1 ; user editable below
	SET wALayer 0
	SET wBLayer 5
	SET timeInPalletB 300000
	SETSTATE ST_RUNNING_IFCO18_5_LAYERS
END

State=PROGRAM_IFCO18_10_LAYERS
	SET usersection 0
	SET newprogram 1
	SET casekind casekind_IFCO18
	SET wBItemsPerLayer 2
	SET usersection 1 ; user editable below
	SET wALayer 0
	SET wBLayer 10
	SET timeInPalletB 300000
	SETSTATE ST_RUNNING_IFCO18_10_LAYERS
END

State=PROGRAM_C18
	SET usersection 0
	SET newprogram 1
	SET casekind casekind_C18
	SET wBItemsPerLayer 2
	SET usersection 1 ; user editable below
	SET wALayer 0
	SET wBLayer 6
	SET timeInPalletB 300000
	SETSTATE ST_RUNNING_C18
END

; RUNNING STATES

State=ST_RUNNING_IFCO18_5_LAYERS
	SET newprogram 0
  TEST workcell = ST_IDLE
  OR workcell = ST_PAUSED
    TEST programidx != 0
      SETSTATE ST_RESET
    ENDTEST
  ENDTEST
END

State=ST_RUNNING_IFCO18_10_LAYERS
	SET newprogram 0
  TEST workcell = ST_IDLE
  OR workcell = ST_PAUSED
    TEST programidx != 1
      SETSTATE ST_RESET
    ENDTEST
  ENDTEST
END

State=ST_RUNNING_C18
	SET newprogram 0
  TEST workcell = ST_IDLE
  OR workcell = ST_PAUSED
    TEST programidx != 2
      SETSTATE ST_RESET
    ENDTEST
  ENDTEST
END

State=ST_TIMER
END

State=ST_HALT
END

State=ST_IDLE
	SETSTATE ST_RESET
END

State=ST_RESET
  TEST programidx = 0
    SETSTATE PROGRAM_IFCO18_5_LAYERS
  ENDTEST
  TEST programidx = 1
    SETSTATE PROGRAM_IFCO18_10_LAYERS
  ENDTEST
  TEST programidx = 2
    SETSTATE PROGRAM_C18
  ENDTEST
END
