STATEMACHINEVERSION 2
Name=ProduktIndPuls
Output=0,Motor "ProduktInd Motor"
Timeout=0,Time 5000000
Link=0,ProduktIndFoto

State=0,ST_HALT
  END

State=0,ST_TIMER
  END

State=0,ST_IDLE
  END

State=0,ST_PULSE
  TEST ProduktIndFoto = ST_LOW 
  OR ProduktIndFoto = ST_HIGH 
    TIMEOUT Time ST_PULSE
    SETSTATE ST_PULSE
  ELSE
    TEST Time = 1
      SETSTATE ST_NOPULSE
    ENDTEST
  ENDTEST
  END

State=0,ST_NOPULSE
  TEST ProduktIndFoto = ST_LOW
  OR ProduktIndFoto = ST_HIGH
    TIMEOUT Time ST_PULSE
    SETSTATE ST_PULSE
  ENDTEST
  END

State=0,ST_RESET
  TIMEOUT Time ST_PULSE
  SETSTATE ST_PULSE
END
