STATEMACHINEVERSION 3
Name=ErrorCode
Link=parent Parent
linkValue=Conv1 errorCode Conv1
linkValue=Conv2 errorCode Conv2
linkValue=Emergency errorCode Emergency
linkValue=errorcode errorCode RoboError
linkValue=Robot errorCode Robot
linkValue=TripWatch errorCode TripWatch

State=ST_HALT
END

State=ST_TIMER
END

State=ST_IDLE
	TEST parent = ST_RESET
		SETSTATE ST_RESET
	ENDTEST
END

State=ST_RESET
	SETSTATE ST_WATCH
END

State=ST_WATCH
	TEST Conv1 != 0
	OR Conv2 != 0
	OR Emergency != 0
	OR Robot != 0
	OR errorcode != 0
	OR TripWatch != 0
		SETSTATE ST_ERROR
	ENDTEST
	TEST parent = ST_IDLE
		SETSTATE ST_IDLE
	ENDTEST
END

State=ST_ERROR
	TEST parent = ST_RESET
		SETSTATE ST_RESET
	ENDTEST
END
