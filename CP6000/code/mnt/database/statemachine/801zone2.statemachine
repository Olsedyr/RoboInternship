STATEMACHINEVERSION 3
Name=zone2
Input=foto "zone2 foto"
Input=reset "zone2 reset"
Const=enable 1
Value=message 0

State=ST_TIMER
END

State=ST_HALT
END

State=ST_IDLE
  SETSTATE ST_STOP
END

State=ST_RESET
  SETSTATE ST_STOP
END

State=ST_RUN
  SET message 0
  TEST foto = 0
  AND enable = 1
    SETSTATE ST_STOP
  ENDTEST
END

State=ST_STOP
  SET message 4007
  TEST reset = 1
  AND foto = 1
    SETSTATE ST_RUN
  ENDTEST
  TEST enable = 0
    SETSTATE ST_RUN
  ENDTEST
END
